C++
#include <iostream>
#include <cmath>
using namespace std;
int main() {
double x1, y1, x2, y2, x3, y3;
cout << "Введите координаты точек A, B и C: ";
cin >> x1 >> y1 >> x2 >> y2 >> x3 >> y3;
double area = 0.5 * fabs(x1 * (y2 - y3) + x2 * (y3 - y1) + x3 * (y1 - y2));
if (area == 0) {
cout << "Точки лежат на одной прямой" << endl;
} else {
cout << "Точкине  лежат на одной прямой" << endl;
}
return 0;
}
